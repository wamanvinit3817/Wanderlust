<% layout("boilerplate.ejs") %>
<body>
     <div class="rows offset-2">
        <div class="cols-8">
            <br>
    <h3 style="margin-bottom: 2rem;">Create a new Listing:</h3>
    
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

       

    <div class="mb-3">
    <label for="title" class="form-label "  >Title</label>
        <input placeholder="Add title to your listing" name="title"  type="text" class="form-control" required>
         <div class="invalid-feedback">This field is required.</div>
            <div class="valid-feedback">Title looks good!</div>
    </div>
        
        
        <div class="mb-3">
             <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" required ></textarea>
            <div class="invalid-feedback">Please enter the description</div>
            <div class="valid-feedback"></div>

        </div>
       
       

       <div class="mb-3">
        <label  class="form-label" for="image">Upload Image</label>
         <input name="image" type="file" class="form-control" >

       </div>
      
        


        <div class="row">
            <div class="col-md-4 mb-3">
            <label class="form-label" for="price">Price</label>
            <input placeholder="e.g-1200" name="price" type="number" class="form-control"required>
             <div class="invalid-feedback">Please enter the valid price for your listing</div>
            <div class="valid-feedback"></div>

        </div>
        
        
        <div class="col-md-8 mb-3" >
             <label class="form-label" for="country">Country</label>
            <input placeholder="India" name="country" type="text" class="form-control"required>
             <div class="invalid-feedback">This field is required</div>
            <div class="valid-feedback"></div>

        </div><br>

        </div>
        
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input placeholder="e.g-Mumbai,Maharashtra" name="location" type="text" class="form-control" required  >
             <div class="invalid-feedback">Please enter the location of your listing</div>
            <div class="valid-feedback"></div>

        </div>
        
        
        
        
        <br>
        <button id="add-btn">Create</button>

    </form>
    <br><br>
    </div>
    </div>
</body>
